<Window x:Class="Bank_Management_System.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank_Management_System"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Background="#FF8AC7DC">
        <Menu Margin="0,0,0,359" Background="#FFEDA1A1">
            <MenuItem FontWeight="Bold" FontSize="20" Header="Customer">
                <MenuItem Header="New Customer"/>
                <MenuItem Header="Check Balance"/>
                <MenuItem Header="Update Info"/>
                <MenuItem Header="Delete Account"/>
            </MenuItem>
            <MenuItem Cursor="AppStarting" Header="Employee" FontWeight="Bold" FontSize="20">
                <MenuItem Header="New Employee"/>
                <MenuItem Header="Show Employee Info"/>
                <MenuItem Header="Update Employee Info"/>
            </MenuItem>
        </Menu>
        <Image HorizontalAlignment="Center" VerticalAlignment="Top" Source="/bank.jpg" Margin="0,80,0,0" Width="780" Height="354" Stretch="Fill"/>

    </Grid>
</Window>
