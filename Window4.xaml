<Window x:Class="Bank_Management_System.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank_Management_System"
        mc:Ignorable="d"
        Title="Window4" Height="450" Width="800">
    <Grid>
        <Label Content="Update Information" HorizontalAlignment="Center" Margin="0,29,0,0" VerticalAlignment="Top" Width="355" Height="59" Background="#FF91DD70" FontWeight="Bold" FontSize="36"/>
        <Label Content="Account No" HorizontalAlignment="Left" Margin="178,108,0,0" VerticalAlignment="Top" Width="166" Background="#FFF09D9D" FontSize="16" FontWeight="Bold"/>
        <Label Content="Marrid" HorizontalAlignment="Left" Margin="178,186,0,0" VerticalAlignment="Top" Width="166" Background="#FFF09D9D" FontSize="16" FontWeight="Bold"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="178,272,0,0" VerticalAlignment="Top" Width="166" Background="#FFF09D9D" RenderTransformOrigin="0.501,-0.129" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="txt_address" HorizontalAlignment="Left" Margin="400,272,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="340" Background="#FF76A7F8" Height="31" FontSize="16" RenderTransformOrigin="0.455,-3.027"/>
        <TextBox x:Name="txt_accno" HorizontalAlignment="Left" Margin="400,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="340" Background="#FF76A7F8" Height="31" FontSize="16"/>
        <CheckBox x:Name="chk_married" Content="Yes" HorizontalAlignment="Left" Margin="400,186,0,0" VerticalAlignment="Top" Height="31" Width="84" FontSize="22"/>
        <CheckBox x:Name="chk_unmarried" Content="No" HorizontalAlignment="Left" Margin="539,186,0,0" VerticalAlignment="Top" Height="31" Width="68" FontSize="22"/>
        <Button Content="UPDATE" HorizontalAlignment="Left" Margin="344,352,0,0" VerticalAlignment="Top" Width="118" Height="38" Background="#FF57D7BB" FontSize="24" FontWeight="Bold"/>

    </Grid>
</Window>
